                                            <th>
                                                Дата
                                            </th>
                                            <th>
                                                От
                                            </th>
                                            <th>
                                                Куда
                                            </th>
                                            <th>
                                                Статус
                                            </th>
                                            <th>
                                                Создал
                                            </th>
                                        </tr>
                                    </thead>
                                    <tbody>
    {% for pinvoice in pinvoicelist %}
                                        <tr>
                                            <td data-value="{{ pinvoice.getInvoiceId() }}"><a href="{{ path('invoice_view',{'pinvoiceid': pinvoice.getInvoiceId()}) }}">{{ pinvoice.getInvoiceType().getShortName() }}-{{ pinvoice.getInvoiceId() }}</a></td>
                                            <td>{{ pinvoice.getInvoiceDate()|date("d.m.Y") }}</td>
                                            <td>{{ pinvoice.getCompanyFrom().getCompName() }}</td>
                                            <td>{{ pinvoice.getCompanyTo().getCompName() }}</td>
                                            <td data-value="1">
                                                <span class="status-metro" style="background-color: {{ pinvoice.getInvoiceSign().getColor() }}; color: #2a6496">{{ pinvoice.getInvoiceSign().getShortName() }}</span>
                                            </td>
                                            <td>
                                                {{ pinvoice.getUserCreate().getFio() }}
                                            </td>
                                        </tr>
    {% else %}
        <tr>
            <td colspan="6">
                Пусто
            </td>
        </tr>
    {% endfor %}

                                    </tbody>
                                    <tfoot>
                                        <tr>
                                            <td colspan="10">
                                                <div class="pagination pagination-centered"></div>
                                            </td>
                                        </tr>
                                    </tfoot>
                                </table>

                            </div>

                        </div>


                    </div>

                </div>
            </div>
    
    <!-- GAGE -->
