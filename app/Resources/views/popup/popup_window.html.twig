<div id="popup_nomen_window" class="modal fade">
    <div class="modal-dialog">
        <div class="modal-content">


            {% block modal_header %}
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
                <h4 class="modal-title"></h4>
            </div>
            {% endblock modal_header %}

            <div class="modal-body">
                {% block modal_body %}
                
                {% endblock modal_body %}
            </div>

            {% block modal_footer %}
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal" id="md_close_btn">Закрыть</button>
                <button type="button" class="btn btn-primary" id="md_save_btn">Сохранить</button>
            </div>
            {% endblock modal_footer %}

        </div>
    </div>
</div>