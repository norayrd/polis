<!DOCTYPE html>
<html lang="ru">

<head>
    <meta charset="utf-8">
    <title>Полис V 1.0</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="">
    <meta name="author" content="">

    <!-- Le styles -->
    <script type="text/javascript" src="assets/js/jquery.min.js"></script>

   <!--  <link rel="stylesheet" href="assets/css/style.css"> -->
    <link rel="stylesheet" href="assets/css/loader-style.css">
    <link rel="stylesheet" href="assets/css/bootstrap.css">
    <link rel="stylesheet" href="assets/css/signin.css">

    <!-- HTML5 shim, for IE6-8 support of HTML5 elements -->
    <!--[if lt IE 9]>
        <script src="http://html5shim.googlecode.com/svn/trunk/html5.js"></script>
        <![endif]-->
    <!-- Fav and touch icons -->
    <link rel="shortcut icon" href="assets/ico/minus.png">
</head>

<body>
    <!-- Preloader -->
    <div id="preloader">
        <div id="status">&nbsp;</div>
    </div>
    <div class="container">

        <div class="" id="login-wrapper">
            <div class="row">
                <div class="col-md-4 col-md-offset-4">
                    <div id="logo-login">
                        <h1>Полис
                            <span>v1.0</span>
                        </h1>
                    </div>
                </div>

            </div>

            <div class="row">
                <div class="col-md-4 col-md-offset-4">
                    <div class="account-box">
                        <h3>Изменение пароля</h3>

                        <form role="form" action="#" method="post">

                        {% if success_message_text != '' %}

                            <div class="row">
                                <div class="alert alert-danger">
                                    {{ success_message_text }}
                                </div>
                            </div>
                        {% elseif error_message_text != '' %}
                            <div class="row">
                                <div class="alert alert-danger">
                                    {{ error_message_text }} Please <a class="great" href="{{ path('forgot_password') }}">Try again</a>
                                </div>
                            </div>
                        {% else %}

                            <div class="form-group">
                                <!--label for="inputUsernameEmail">E-mail</label-->
                                <input type="password" id="inputUsernameEmail" class="form-control" placeholder="новый пароль" name="_new_password" value="">
                            </div>
                            <div class="form-group">
                                <!--label for="inputUsernameEmail">E-mail</label-->
                                <input type="password" id="inputUsernameEmail" class="form-control" placeholder="повторите пароль" name="_retype_password" value="">
                            </div>
                            <div class="row">
                                <div class="col-md-6">
                                    <a class="forgotLnk" href="{{ path('security_login_form') }}">Назад</a>
                                </div>
                                <div class="col-md-6">
                                    <button class="btn btn btn-primary pull-right" type="submit">
                                        Изменить <span class="entypo-check"></span>
                                    </button>
                                </div>
                            </div>
                        {% endif %}

                        </form>
                    </div>
                </div>
            </div>
        </div>

        <div style="text-align:center;margin:0 auto;">
            <h6 style="color:#fff;">Release 1.0 Powered by © norayrd 2016</h6>
        </div>

    </div>

    <!--  END OF PAPER WRAP -->

    <!-- MAIN EFFECT -->
    <script type="text/javascript" src="assets/js/preloader.js"></script>
    <script type="text/javascript" src="assets/js/bootstrap.js"></script>
    <script type="text/javascript" src="assets/js/app.js"></script>
    <script type="text/javascript" src="assets/js/load.js"></script>
    <script type="text/javascript" src="assets/js/main.js"></script>

</body>

</html>
