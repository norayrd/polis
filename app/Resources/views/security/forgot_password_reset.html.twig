{% extends 'base.html.twig' %}

{% block title %}Reset Password{% endblock %}


{% block javascripts %}
    <script type="text/javascript" src="{{ asset('js/login/forgot-password.js') }}"></script>
{% endblock %}
{% block notifyjs %} {% endblock %}

{% block body_class %}act-forgot-password{% endblock %}

{% block header %}
    <header class="project-main-header">
        <div class="header-inner  f_header-inner table">
            <div class="logo-box table-cell">
                {# <a href="{{ path('dashboard') }}"><span class="logo-icon"></span>clusoo</a> #}
            </div>
        </div>
    </header>
{% endblock %}

{% block body %}

    <div class="login-wrapper">
        <div class="login-inner">
            <form action="#" method="post" id="forgot_password_form">
                {% if success_message_text != '' %}
                    <div class="alert alert-success f_alert-success">
                        {{ success_message_text }}
                    </div>    
                {% elseif error_message_text != '' %}
                    <div class="alert alert-danger">
                        {{ error_message_text }} Please <a class="great" href="{{ path('forgot_password') }}">Try again</a>
                    </div>
                {% else %}
                    <h1 class="forgot-password-title">Password Reset</h1>
                    <div class="login-form-inner">
                        <div class="form-group">
                            <input type="password" class="form-control required" placeholder="New Password" autocomplete="off" id="newPassword" name="_new_password" value=""/>
                        </div>
                        <div class="form-group">
                            <input type="password" class="form-control required" placeholder="Confirm Password" id="confirmPassword" name="_retype_password" value=""/>
                        </div>
                        <button type="submit" class="btn btn-primary signup-btn" id="submit_form">
                            Confirm password
                        </button>
                    </div>
                {% endif%}

            </form>
        </div>
    </div>

{% endblock %}

{% block footer %}{% endblock %}
